<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicExampleActivity"
    android:background="#FF9933"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음악정서 연습 문제"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp">
        <Button
            android:layout_weight="1"
            android:id="@+id/happyExampleButtonMusic"
            android:background="@drawable/button_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/sadExampleButtonMusic"
            android:background="@drawable/button_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/happyExamButtonMusic"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:background="@drawable/happy" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <Button
            android:id="@+id/sadExamButtonMusic"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:background="@drawable/sad" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:layout_weight="9"
            android:id="@+id/musicExampleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검사 시작"
            android:background="@drawable/button_shape"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/musicExampleStopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정지"
            android:background="@drawable/button_shape"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>